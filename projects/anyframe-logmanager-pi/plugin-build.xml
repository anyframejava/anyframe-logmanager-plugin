<?xml version="1.0" encoding="UTF-8" ?>
<plugin name="logmanager" description="Log Manager Plugin is sample application that connected with Log Manager">
  <groupId>org.anyframe.plugin</groupId>
  <artifactId>anyframe-logmanager-pi</artifactId>
  <version>1.0.1</version>
  	<dependent-plugins>
		<dependent-plugin name="core" version="2.0.0&gt;*" />
	</dependent-plugins>
  <resources>
    <resource dir="src/main/java" filtered="true" packaged="true">
      <include name="**/*.java"/>
    </resource>
    <resource dir="src/main/resources" filtered="true" packaged="false">
      <include name="**/*.xml"/>
      <exclude name="**/log4j.xml"/>
    </resource>
    <resource dir="src/test/java" filtered="true" packaged="true">
      <include name="**/*.java"/>
    </resource>
    <resource dir="src/test/resources" filtered="true" packaged="false">
      <include name="**/*.xml"/>
    </resource>
    <resource dir="src/main/webapp/WEB-INF/jsp" filtered="false" packaged="false">
      <include name="**/*.jsp"/>
    </resource>
  </resources>
  <build>
    <filesets>
      <fileset dir="src/main/java" filtered="true" packaged="true">
        <include name="**/org/anyframe/plugin/logmanager/**/*.java"/>
      </fileset>
       <fileset dir="src/test/java" filtered="true" packaged="true">
        <include name="**/org/anyframe/plugin/logmanager/**/*.java"/>
      </fileset>
      <fileset dir="src/main/resources" filtered="true" packaged="false">
        <include name="**/*logmanager*.xml"/>
        <include name="**/log4j.xml"/>
      </fileset>
      <fileset dir="src/main/webapp" filtered="false" packaged="false">
        <include name="**/logmanager/**/*.*"/>
        <include name="**/web.xml"/>
        <include name="**/anyframe.jsp"/>
      </fileset>
    </filesets>
  </build>
  <samples>true</samples>
  <interceptor>
    <class></class>
  </interceptor>
  <essential>false</essential>
</plugin>